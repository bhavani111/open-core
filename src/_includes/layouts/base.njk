<!doctype html>
<html lang="en" data-theme="light">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% if title %}{{ title }} · {% endif %}{{ site.author }} - {{ site.title }}</title>
  <meta name="description" content="{{ description or site.description | safe }}">
  <meta name="author" content="{{ site.author }}">
  {% set keywordContent = keywords | keywordString(site.metaKeywords) %}
  {% if keywordContent %}
  <meta name="keywords" content="{{ keywordContent }}">
  {% endif %}

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  <!-- Icons -->
  <link rel="icon" href="{{ '/favicon.ico' | url }}">
  <link rel="apple-touch-icon" href="{{ '/favicon.ico' | url }}">
  
  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/styles.css' | url }}">

  {% set defaultSocialImage = site.socialImage | default('') %}
  {% set socialImage = (image or defaultSocialImage) | trim %}
  {% if socialImage %}
    {% if socialImage | first == '/' %}
      {% set socialImageUrl = site.url ~ socialImage %}
    {% else %}
      {% set socialImageUrl = socialImage %}
    {% endif %}
  {% endif %}

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="{% if layout == 'post' %}article{% else %}website{% endif %}">
  <meta property="og:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}">
  <meta property="og:description" content="{{ description or site.description | safe }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:site_name" content="{{ site.title }}">
  <meta property="og:locale" content="en_US">
  {% if socialImageUrl %}
  <meta property="og:image" content="{{ socialImageUrl }}">
  {% endif %}
  {% if date %}
  <meta property="article:published_time" content="{{ date.toISOString() }}">
  {% endif %}
  {% if tags %}
  {% for tag in tags %}
  <meta property="article:tag" content="{{ tag }}">
  {% endfor %}
  {% endif %}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@sachinamingad">
  <meta name="twitter:creator" content="@sachinamingad">
  <meta name="twitter:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}">
  <meta name="twitter:description" content="{{ description or site.description | safe }}">
  {% if socialImageUrl %}
  <meta name="twitter:image" content="{{ socialImageUrl }}">
  {% endif %}
  
  <!-- Mobile Web App -->
  <meta name="theme-color" content="#2563eb">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  
  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS Feed" href="{{ site.url }}{{ '/feed.xml' | url }}">
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{% if layout == 'post' %}BlogPosting{% else %}WebSite{% endif %}",
    "name": "{% if title %}{{ title }} · {% endif %}{{ site.author }} - {{ site.title }}",
    "description": "{{ description or site.description | safe }}",
    "url": "{{ site.url }}{{ page.url }}",
    "headline": "{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}",
    "author": {
      "@type": "Person",
      "name": "{{ site.author }}",
      "givenName": "Sachin",
      "familyName": "Amingad",
      "jobTitle": "Embedded Systems Engineer",
      "description": "Firmware developer specializing in RISC-V, FPGA, and Zephyr RTOS",
      "url": "{{ site.url }}",
      "email": "{{ site.social.email }}",
      "sameAs": [
        "{{ site.social.github }}",
        "{{ site.social.twitter }}",
        "{{ site.social.linkedin }}"
      ]
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ site.title }}",
      "url": "{{ site.url }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ site.url }}/favicon.ico"
      }
    }{% if layout == 'post' %},
    "datePublished": "{{ date.toISOString() }}",
    "dateModified": "{{ date.toISOString() }}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ site.url }}{{ page.url }}"
    },
    "keywords": "{% if tags %}{{ tags | join(', ') }}, Sachin Amingad{% else %}Sachin Amingad{% endif %}"{% endif %}
  }
  </script>
  
  <!-- Organization Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ site.title }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/favicon.ico",
    "description": "{{ site.description }}",
    "sameAs": [
      "{{ site.social.github }}",
      "{{ site.social.twitter }}",
      "{{ site.social.linkedin }}"
    ]
  }
  </script>
  
  <!-- Breadcrumb Schema -->
  {% if breadcrumb %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": {{ breadcrumb | safe }}
  }
  </script>
  {% endif %}
</head>
<body>
  <header class="site-header">
    <div class="header-top">
      <div class="header-brand">
        <h1><a href="{{ '/' | url }}">{{ site.author }}</a></h1>
        <span class="header-tagline">{{ site.title }}</span>
      </div>
      <div class="social-links">
        <a href="{{ site.social.github }}" target="_blank" rel="noopener" aria-label="GitHub" title="GitHub">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a href="{{ site.social.linkedin }}" target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="{{ site.social.twitter }}" target="_blank" rel="noopener" aria-label="X (Twitter)" title="X (Twitter)">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="mailto:{{ site.social.email }}" aria-label="Email" title="Email">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"/>
          </svg>
        </a>
      </div>
    </div>
    <nav class="main-nav">
      <a href="{{ '/' | url }}">Home</a>
      <a href="{{ '/about/' | url }}">About</a>
      <a href="{{ '/posts/' | url }}">Posts</a>
      <a href="{{ '/contact/' | url }}">Contact</a>
    </nav>
  </header>

  <main>
    <div class="container">
      {{ content | safe }}
    </div>
  </main>

  <!-- Newsletter Signup -->
  {% if site.forms and site.forms.newsletter and site.forms.newsletter.enabled and site.forms.newsletter.endpoint %}
    <div class="newsletter-signup">
      <div class="container">
        <div class="newsletter-content">
          <h2>📬 Stay Updated</h2>
          <p>Get the latest posts on RISC-V, FPGA development, and open source hardware delivered to your inbox.</p>
          <form
            class="newsletter-form"
            id="newsletter-form"
            name="newsletter"
            method="POST"
            action="{{ site.forms.newsletter.endpoint }}"
            data-endpoint="{{ site.forms.newsletter.endpoint }}">
            <p class="visually-hidden" aria-hidden="true">
              <label>Don’t fill this out if you're human: <input name="bot-field" tabindex="-1"></label>
            </p>
            <input
              type="email"
              name="email"
              id="newsletter-email"
              placeholder="Enter your email"
              required
              aria-label="Email address"
            />
            <button type="submit" class="btn">Subscribe</button>
          </form>
          <p class="form-message" id="newsletter-message" role="status" aria-live="polite"></p>
          <p class="newsletter-privacy">No spam. Unsubscribe anytime.</p>
        </div>
      </div>
    </div>
  {% endif %}

  <footer>
    <div class="container">
      <p>© <span id="year"></span> {{ site.title }} · By {{ site.author }}</p>
      <p>Built with <a href="https://11ty.dev" target="_blank" rel="noopener">Eleventy</a></p>
    </div>
  </footer>

  <!-- Dark Mode Toggle Button -->
  <button class="theme-toggle" id="theme-toggle" aria-label="Toggle dark mode">
    <svg id="theme-icon-light" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/>
    </svg>
    <svg id="theme-icon-dark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="display: none;">
      <path d="M10 7a7 7 0 0 0 12 4.9v.1c0 5.523-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2h.1A6.979 6.979 0 0 0 10 7zm-6 5a8 8 0 0 0 15.062 3.762A9 9 0 0 1 8.238 4.938 7.999 7.999 0 0 0 4 12z"/>
    </svg>
  </button>

  <!-- Back to Top Button -->
  <button class="back-to-top" id="back-to-top" aria-label="Back to top">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 2l8 8h-6v12h-4V10H4l8-8z"/>
    </svg>
  </button>

  <script>
    // Set current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Dark mode toggle
    const themeToggle = document.getElementById('theme-toggle');
    const themeIconLight = document.getElementById('theme-icon-light');
    const themeIconDark = document.getElementById('theme-icon-dark');
    const html = document.documentElement;

    // Check for saved theme preference or default to light mode
    const savedTheme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
    const currentTheme = savedTheme || (prefersDark ? 'dark' : 'light');
    html.setAttribute('data-theme', currentTheme);

    themeToggle.setAttribute('aria-pressed', currentTheme === 'dark');

    if (currentTheme === 'dark') {
      themeIconLight.style.display = 'none';
      themeIconDark.style.display = 'block';
    }

    themeToggle.addEventListener('click', () => {
      const theme = html.getAttribute('data-theme');
      const newTheme = theme === 'light' ? 'dark' : 'light';

      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      themeToggle.setAttribute('aria-pressed', newTheme === 'dark');

      if (newTheme === 'dark') {
        themeIconLight.style.display = 'none';
        themeIconDark.style.display = 'block';
      } else {
        themeIconLight.style.display = 'block';
        themeIconDark.style.display = 'none';
      }
    });

    // Newsletter form handling for external providers
    const newsletterForm = document.getElementById('newsletter-form');
    const newsletterMessage = document.getElementById('newsletter-message');

    if (newsletterForm && newsletterMessage) {
      newsletterForm.addEventListener('submit', async (event) => {
        event.preventDefault();

        const emailField = newsletterForm.elements['email'];
        const endpoint = newsletterForm.dataset.endpoint || newsletterForm.getAttribute('action');

        if (!endpoint || endpoint === '#') {
          newsletterMessage.textContent = 'Newsletter signup is not available right now. Please try again later.';
          newsletterMessage.className = 'form-message error';
          return;
        }

        const formData = new FormData(newsletterForm);

        newsletterMessage.textContent = 'Submitting…';
        newsletterMessage.className = 'form-message pending';

        try {
          const response = await fetch(endpoint, {
            method: (newsletterForm.getAttribute('method') || 'POST').toUpperCase(),
            headers: { Accept: 'application/json' },
            body: formData
          });

          if (response.ok) {
            newsletterMessage.textContent = 'Thanks for subscribing! Please check your inbox for a confirmation email.';
            newsletterMessage.className = 'form-message success';
            newsletterForm.reset();
            emailField.focus();
            return;
          }

          let errorText = 'Something went wrong. Please try again or contact us directly.';

          try {
            const data = await response.json();
            if (data && data.errors && data.errors.length > 0) {
              errorText = data.errors.map((item) => item.message).join(' ');
            } else if (data && data.error) {
              errorText = data.error;
            }
          } catch (parseError) {
            console.warn('Unable to parse newsletter error response', parseError);
          }

          throw new Error(errorText);
        } catch (error) {
          console.error(error);
          newsletterMessage.textContent = error?.message || 'Something went wrong. Please try again or contact us directly.';
          newsletterMessage.className = 'form-message error';
        }
      });
    }

    // Back to top button
    const backToTop = document.getElementById('back-to-top');

    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        backToTop.classList.add('visible');
      } else {
        backToTop.classList.remove('visible');
      }
    });

    backToTop.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  </script>
</body>
</html>
