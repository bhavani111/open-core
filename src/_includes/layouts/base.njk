<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% if title %}{{ title }} · {% endif %}{{ site.title }}</title>
  <meta name="description" content="{{ description or site.description | safe }}">
  <meta name="author" content="{{ site.title }}">
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="/assets/styles.css">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}">
  <meta property="og:description" content="{{ description or site.description | safe }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
</head>
<body>
  <header>
    <div class="container">
      <h1><a href="/">{{ site.title }}</a></h1>
      <nav>
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/posts/">Posts</a>
        <a href="/contact/">Contact</a>
      </nav>
    </div>
  </header>

  <main>
    <div class="container">
      {{ content | safe }}
    </div>
  </main>

  <footer>
    <div class="container">
      <p>© <span id="year"></span> {{ site.title }} · Open Source Blog</p>
      <p>Built with <a href="https://11ty.dev" target="_blank" rel="noopener">Eleventy</a></p>
    </div>
  </footer>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
</html>
