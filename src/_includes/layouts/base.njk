<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% if title %}{{ title }} 路 {% endif %}{{ site.title }}</title>
  <meta name="description" content="{{ description or site.description | safe }}">
  <meta name="author" content="{{ site.author }}">
  
  <!-- Keywords -->
  {% if keywords %}
  <meta name="keywords" content="{{ keywords }}">
  {% endif %}
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  <!-- Icons -->
  <link rel="icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/favicon.ico">
  
  <!-- Styles -->
  <link rel="stylesheet" href="/assets/styles.css">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="{% if layout == 'post' %}article{% else %}website{% endif %}">
  <meta property="og:title" content="{% if title %}{{ title }} 路 {% endif %}{{ site.title }}">
  <meta property="og:description" content="{{ description or site.description | safe }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:site_name" content="{{ site.title }}">
  <meta property="og:locale" content="en_US">
  {% if date %}
  <meta property="article:published_time" content="{{ date.toISOString() }}">
  {% endif %}
  {% if tags %}
  {% for tag in tags %}
  <meta property="article:tag" content="{{ tag }}">
  {% endfor %}
  {% endif %}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@sachinamingad">
  <meta name="twitter:creator" content="@sachinamingad">
  <meta name="twitter:title" content="{% if title %}{{ title }} 路 {% endif %}{{ site.title }}">
  <meta name="twitter:description" content="{{ description or site.description | safe }}">
  
  <!-- Mobile Web App -->
  <meta name="theme-color" content="#2563eb">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  
  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS Feed" href="{{ site.url }}/feed.xml">
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{% if layout == 'post' %}BlogPosting{% else %}WebSite{% endif %}",
    "name": "{% if title %}{{ title }} 路 {% endif %}{{ site.title }}",
    "description": "{{ description or site.description | safe }}",
    "url": "{{ site.url }}{{ page.url }}",
    "headline": "{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}",
    "author": {
      "@type": "Person",
      "name": "{{ site.author }}",
      "url": "{{ site.social.linkedin }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ site.title }}",
      "url": "{{ site.url }}"
    }{% if layout == 'post' %},
    "datePublished": "{{ date.toISOString() }}",
    "dateModified": "{{ date.toISOString() }}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ site.url }}{{ page.url }}"
    },
    "keywords": "{% if tags %}{{ tags | join(', ') }}{% endif %}"{% endif %}
  }
  </script>
  
  <!-- Organization Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ site.title }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/favicon.ico",
    "description": "{{ site.description }}",
    "sameAs": [
      "{{ site.social.github }}",
      "{{ site.social.twitter }}",
      "{{ site.social.linkedin }}"
    ]
  }
  </script>
  
  <!-- Breadcrumb Schema -->
  {% if breadcrumb %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": {{ breadcrumb | safe }}
  }
  </script>
  {% endif %}
</head>
<body>
  <header>
    <div class="container">
      <h1><a href="/">{{ site.title }}</a></h1>
      <nav>
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/posts/">Posts</a>
        <a href="/contact/">Contact</a>
      </nav>
    </div>
  </header>

  <main>
    <div class="container">
      {{ content | safe }}
    </div>
  </main>

  <!-- Newsletter Signup -->
  <div class="newsletter-signup">
    <div class="container">
      <div class="newsletter-content">
        <h2> Stay Updated</h2>
        <p>Get the latest posts on RISC-V, FPGA development, and open source hardware delivered to your inbox.</p>
        <form class="newsletter-form" id="newsletter-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
          <input 
            type="email" 
            name="email" 
            id="newsletter-email" 
            placeholder="Enter your email" 
            required
            aria-label="Email address"
          />
          <button type="submit" class="btn">Subscribe</button>
        </form>
        <p class="newsletter-privacy">No spam. Unsubscribe anytime.</p>
      </div>
    </div>
  </div>

  <footer>
    <div class="container">
      <p>漏 <span id="year"></span> {{ site.title }} 路 By {{ site.author }}</p>
      <p>Built with <a href="https://11ty.dev" target="_blank" rel="noopener">Eleventy</a></p>
    </div>
  </footer>

  <!-- Dark Mode Toggle Button -->
  <button class="theme-toggle" id="theme-toggle" aria-label="Toggle dark mode">
    <svg id="theme-icon-light" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/>
    </svg>
    <svg id="theme-icon-dark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="display: none;">
      <path d="M10 7a7 7 0 0 0 12 4.9v.1c0 5.523-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2h.1A6.979 6.979 0 0 0 10 7zm-6 5a8 8 0 0 0 15.062 3.762A9 9 0 0 1 8.238 4.938 7.999 7.999 0 0 0 4 12z"/>
    </svg>
  </button>

  <!-- Back to Top Button -->
  <button class="back-to-top" id="back-to-top" aria-label="Back to top">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 2l8 8h-6v12h-4V10H4l8-8z"/>
    </svg>
  </button>

  <script>
    // Set current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Dark mode toggle
    const themeToggle = document.getElementById('theme-toggle');
    const themeIconLight = document.getElementById('theme-icon-light');
    const themeIconDark = document.getElementById('theme-icon-dark');
    const html = document.documentElement;

    // Check for saved theme preference or default to light mode
    const currentTheme = localStorage.getItem('theme') || 'light';
    html.setAttribute('data-theme', currentTheme);

    if (currentTheme === 'dark') {
      themeIconLight.style.display = 'none';
      themeIconDark.style.display = 'block';
    }

    themeToggle.addEventListener('click', () => {
      const theme = html.getAttribute('data-theme');
      const newTheme = theme === 'light' ? 'dark' : 'light';

      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);

      if (newTheme === 'dark') {
        themeIconLight.style.display = 'none';
        themeIconDark.style.display = 'block';
      } else {
        themeIconLight.style.display = 'block';
        themeIconDark.style.display = 'none';
      }
    });

    // Back to top button
    const backToTop = document.getElementById('back-to-top');

    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        backToTop.classList.add('visible');
      } else {
        backToTop.classList.remove('visible');
      }
    });

    backToTop.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  </script>
</body>
</html>
